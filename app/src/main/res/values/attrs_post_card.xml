<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom attributes for the LikeButton -->
    <declare-styleable name="LikeButton">
        <!-- Custom attribute for the like count -->
        <attr name="likeCount" format="integer" />
        <!-- Custom attribute for the like status -->
        <attr name="isLiked" format="boolean" />
    </declare-styleable>

    <!-- Custom attributes for the CommentButton -->
    <declare-styleable name="CommentButton">
        <!-- Custom attribute for the comment count -->
        <attr name="commentCount" format="integer" />
    </declare-styleable>
</resources>