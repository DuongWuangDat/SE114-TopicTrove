<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TopicTrove"
        tools:targetApi="31">
        <activity
            android:name=".ui.global_widgets.PostCard"
            android:exported="true"
            android:label="@string/title_activity_post_card"
            android:theme="@style/Theme.TopicTrove">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.global_widgets.Comment_Button"
            android:exported="false"
            android:label="@string/title_activity_comment_button"
            android:theme="@style/Theme.TopicTrove" />
        <activity
            android:name=".ui.global_widgets.ui.theme.Comment_Button"
            android:exported="false"
            android:label="@string/title_activity_comment_button"
            android:theme="@style/Theme.TopicTrove" />
        <activity
            android:name=".ui.global_widgets.Like_Button"
            android:exported="false"
            android:label="@string/title_activity_like_button"
            android:theme="@style/Theme.TopicTrove" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TopicTrove">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>